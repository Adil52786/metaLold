config BR2_VENDOR_X11
	bool "X11"
    help
        X11 subsystem
    depends on BR2_VENDOR_APP_DESKTOP||BR2_VENDOR_APP_GAMEBOX
    default y
    select BR2_PACKAGE_XORG7
    select BR2_PACKAGE_XTERM
    select BR2_PACKAGE_XFONT_FONT_CRONYX_CYRILLIC

if BR2_VENDOR_X11

config BR2_VENDOR_X11_SERVER
	bool "server"
    default y
    select BR2_PACKAGE_XSERVER_XORG_SERVER
    select BR2_PACKAGE_XDRIVER_XF86_VIDEO_QXL
    select BR2_PACKAGE_XDRIVER_XF86_VIDEO_CIRRUS
    select BR2_PACKAGE_XDRIVER_XF86_VIDEO_VESA
    select BR2_PACKAGE_XDRIVER_XF86_VIDEO_INTEL if BR2_i386
    select BR2_PACKAGE_XDRIVER_XF86_INPUT_KEYBOARD
    select BR2_PACKAGE_XDRIVER_XF86_INPUT_MOUSE
    select BR2_PACKAGE_XDRIVER_XF86_INPUT_SYNAPTICS
    select BR2_PACKAGE_XDRIVER_XF86_INPUT_JOYSTICK if BR2_VENDOR_APP_GAMEBOX
    select BR2_PACKAGE_XAPP_XINIT
    select BR2_PACKAGE_XAPP_XRANDR
    #select BR2_PACKAGE_XAPP_XDM blocks serial console & no root login

config BR2_VENDOR_X11_APPS
	bool "apps"
    default y if BR2_VENDOR_X11
    select BR2_PACKAGE_XAPP_XSETROOT
    select BR2_PACKAGE_XAPP_XCLOCK
    select BR2_PACKAGE_XAPP_XEYES
    select BR2_PACKAGE_XAPP_XLOAD
    select BR2_PACKAGE_XAPP_XCONSOLE
    select BR2_PACKAGE_XAPP_XMORE

config BR2_VENDOR_X11_MATCHBOX
	bool "matchbox wm"
#    default y if BR2_VENDOR_X11_SERVER && !BR2_VENDOR_APP_GAMEBOX
    select BR2_PACKAGE_MATCHBOX
    select BR2_PACKAGE_MATCHBOX_PANEL
#BR2_PACKAGE_MATCHBOX_SM=y
#BR2_PACKAGE_MATCHBOX_DESKTOP=y
#BR2_PACKAGE_MATCHBOX_COMMON=y
#BR2_PACKAGE_MATCHBOX_COMMON_PDA=y
#BR2_PACKAGE_MATCHBOX_KEYBOARD=y
#BR2_PACKAGE_MATCHBOX_STARTUP_MONITOR=y

config BR2_VENDOR_X11_TILING
	bool "tiling wm"
    default y
#    if BR2_VENDOR_X11_SERVER &&  BR2_VENDOR_APP_GAMEBOX
    select BR2_PACKAGE_RATPOISON

endif # BR2_VENDOR_X11
